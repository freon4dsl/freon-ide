{
    "compilerOptions": {
        "target": "ES2021",
        "module": "NodeNext",
        "lib": [
            "ES2021"
        ],
        "sourceMap": true,
        "outDir": "out",
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": ".",
        "noEmit": true
    },
    "include": [
        "src/**/*.ts"
        // "test/**/*.ts"
    ],
    "exclude": [
        "out",
        "node_modules"
    ]
}
